@model NSSail.Models.MembershipType

@{
    ViewData["Title"] = "Edit Membership Types";
}

<h2>Edit A Membership</h2>

<h4>MembershipType</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
